<div class="form-container wrapper center">
  <div class="title">
    <h2>Sign up</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name, class: 'text-label' %>
      <%= f.text_field :first_name, autofocus: true, class: 'text-input' %>
    </div>
    
    <div class="field">
      <%= f.label :last_name, class: 'text-label' %>
      <%= f.text_field :last_name, class: 'text-input' %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'text-label' %>
      <%= f.email_field :email, class: 'text-input' %>
    </div>

    <div class="field">
      <%= f.label :location_string, class: 'text-label' do %>
        Location
        <em>(City or address)</em>
      <% end %>
      <%= f.text_field :location_string, class: 'text-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'text-label' do %>
        Password
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'text-input' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'text-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn-main' %>
    </div>
  <% end %>
</div>
