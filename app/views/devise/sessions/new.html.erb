 <div class="form-container">
  <div class="form-title">
    <h2>Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'text-label' %>
      <%= f.email_field :email, autofocus: true, class: 'text-input' %>
    </div>

    <div class="field remember-field">
      <%= f.label :password, class: 'text-label' %>
      <%= f.password_field :password, autocomplete: "off", class: 'text-input' %>
       <% if devise_mapping.rememberable? -%>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn-primary' %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
