<div class="form-container">
  <div class="form-title">
    <h2>Forgot your password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: 'text-label' %>
      <%= f.email_field :email, autofocus: true, class: 'text-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn-primary'%>
    </div>
  <% end %>
</div>